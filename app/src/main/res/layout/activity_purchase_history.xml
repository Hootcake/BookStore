<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseHistoryActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editTextUserUid"
        android:hint="Enter user UID"
        />

    <Button
        android:layout_margin="15dp"
        android:text="Check Purchase History"
        android:id="@+id/purchaseHistory"
        android:layout_toRightOf="@id/editTextUserUid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="purchaseHistory"/>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/historyLayout">
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>


